<%# app/views/setup/products/new.html.erb %>
<% content_for :title, "New Product" %>
<% content_for :breadcrumb do %>
  <span style="color:var(--text-dim)">Setup</span>
  <span class="breadcrumb-sep">/</span>
  <%= link_to 'Products', setup_products_path %>
  <span class="breadcrumb-sep">/</span>
  <span class="breadcrumb-current">New</span>
<% end %>

<div class="page-header">
  <div>
    <div class="page-title">New Product</div>
    <div class="page-subtitle">Add a product to the shared catalogue</div>
  </div>
</div>

<%= form_with model: [:setup, @product], local: true do |f| %>
  <div class="form-card" style="max-width:780px">
    <%= render 'form', product: @product, f: f %>
    <div class="form-actions">
      <%= f.submit 'Create Product', class: 'btn btn-primary' %>
      <%= link_to 'Cancel', setup_products_path, class: 'btn btn-secondary' %>
    </div>
  </div>
<% end %>
