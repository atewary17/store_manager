<%# app/views/setup/uoms/show.html.erb %>
<% content_for :title, @uom.name %>
<% content_for :breadcrumb do %>
  <span style="color:var(--text-dim)">Setup</span>
  <span class="breadcrumb-sep">/</span>
  <%= link_to 'Units of Measure', setup_uoms_path %>
  <span class="breadcrumb-sep">/</span>
  <span class="breadcrumb-current"><%= @uom.name %></span>
<% end %>

<div class="page-header">
  <div>
    <div class="page-title"><%= @uom.name %></div>
    <div class="page-subtitle" style="display:flex;align-items:center;gap:8px;margin-top:6px">
      <span style="font-family:var(--mono);font-size:13px;background:var(--surface);
                   border:1px solid var(--border);padding:2px 10px;border-radius:4px">
        <%= @uom.short_name %>
      </span>
      <span class="badge <%= @uom.active? ? 'badge-active' : 'badge-inactive' %>">
        <%= @uom.active? ? 'active' : 'inactive' %>
      </span>
    </div>
  </div>
  <div class="actions">
    <%= link_to 'Edit', edit_setup_uom_path(@uom), class: 'btn btn-secondary' %>
    <% if @uom.can_delete? %>
      <%= button_to 'Delete', setup_uom_path(@uom),
            method: :delete,
            class: 'btn btn-danger',
            form: { style: 'margin:0' },
            data: { confirm: "Delete \"#{@uom.name}\"?" } %>
    <% end %>
  </div>
</div>

<div class="detail-card" style="margin-bottom:24px">
  <div class="detail-section">
    <div class="detail-section-title">Details</div>
    <div class="detail-grid">
      <div class="detail-field">
        <label>Full Name</label>
        <div class="value"><%= @uom.name %></div>
      </div>
      <div class="detail-field">
        <label>Short Name</label>
        <div class="value mono"><%= @uom.short_name %></div>
      </div>
      <div class="detail-field">
        <label>Status</label>
        <div class="value">
          <span class="badge <%= @uom.active? ? 'badge-active' : 'badge-inactive' %>">
            <%= @uom.active? ? 'active' : 'inactive' %>
          </span>
        </div>
      </div>
      <div class="detail-field">
        <label>Products Using</label>
        <div class="value"><%= @uom.products.count %> products</div>
      </div>
      <div class="detail-field">
        <label>Created</label>
        <div class="value mono"><%= @uom.created_at.strftime('%d %b %Y, %H:%M') %></div>
      </div>
      <div class="detail-field">
        <label>Last Updated</label>
        <div class="value mono"><%= @uom.updated_at.strftime('%d %b %Y, %H:%M') %></div>
      </div>
    </div>
  </div>
</div>

<% if @uom.products.any? %>
  <div style="font-size:14px;font-weight:600;margin-bottom:12px">
    Products using this UOM
    <span style="font-family:var(--mono);font-size:12px;color:var(--text-dim);font-weight:400;margin-left:6px">
      <%= @uom.products.count %>
    </span>
  </div>
  <div class="table-wrap">
    <table>
      <thead>
        <tr><th>Brand</th><th>Description</th><th>Category</th><th>GST</th><th>Status</th></tr>
      </thead>
      <tbody>
        <% @uom.products.includes(:product_category).each do |product| %>
        <tr>
          <td style="font-weight:500"><%= product.brand %></td>
          <td><%= link_to product.description.truncate(50), setup_product_path(product) %></td>
          <td><span class="badge badge-plan"><%= product.product_category.name %></span></td>
          <td style="font-family:var(--mono);font-size:12px"><%= product.gst_rate %>%</td>
          <td>
            <span class="badge <%= product.active? ? 'badge-active' : 'badge-inactive' %>">
              <%= product.active? ? 'active' : 'inactive' %>
            </span>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div style="color:var(--text-dim);font-size:13px;padding:12px 0">
    No products are using this UOM yet.
  </div>
<% end %>

<div style="margin-top:20px">
  <%= link_to 'â† Back to UOMs', setup_uoms_path, class: 'btn btn-secondary' %>
</div>
