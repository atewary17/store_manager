<% content_for :title, "Dashboard" %>
<% content_for :breadcrumb do %>
  <span class="breadcrumb-current">Dashboard</span>
<% end %>

<style>
  .welcome-bar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 36px;
    padding-bottom: 28px;
    border-bottom: 1px solid var(--border);
  }
  .welcome-greeting {
    font-size: 22px;
    font-weight: 600;
    letter-spacing: -0.02em;
  }
  .welcome-greeting span { color: var(--accent); }
  .welcome-meta {
    font-size: 13px;
    color: var(--text-dim);
    margin-top: 5px;
    display: flex;
    align-items: center;
    gap: 12px;
  }
  .welcome-meta-sep { color: var(--border-2, #2a3050); }
  .org-badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    background: var(--accent-dim);
    color: var(--accent);
    border: 1px solid rgba(79,142,247,0.2);
    border-radius: 100px;
    padding: 3px 10px;
    font-family: var(--mono);
    font-size: 11px;
    font-weight: 500;
  }

  /* ── MODULE GRID ── */
  .modules-label {
    font-family: var(--mono);
    font-size: 10px;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--text-dim);
    margin-bottom: 16px;
  }

  .modules-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 16px;
    margin-bottom: 40px;
  }

  .module-card {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 24px;
    display: flex;
    flex-direction: column;
    gap: 16px;
    position: relative;
    overflow: hidden;
    transition: border-color 0.2s, transform 0.15s, box-shadow 0.2s;
    cursor: default;
  }

  /* Active module */
  .module-card.active {
    cursor: pointer;
    border-color: rgba(79,142,247,0.3);
  }
  .module-card.active:hover {
    border-color: var(--accent);
    transform: translateY(-2px);
    box-shadow: 0 8px 32px rgba(79,142,247,0.12);
  }
  .module-card.active::before {
    content: '';
    position: absolute;
    top: 0; left: 0; right: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--accent), rgba(79,142,247,0.3));
  }

  /* Inactive/locked module */
  .module-card.inactive {
    opacity: 0.55;
  }
  .module-card.inactive::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 12px;
    background: repeating-linear-gradient(
      -45deg,
      transparent,
      transparent 6px,
      rgba(255,255,255,0.015) 6px,
      rgba(255,255,255,0.015) 7px
    );
    pointer-events: none;
  }

  .module-icon {
    width: 44px; height: 44px;
    border-radius: 10px;
    display: flex; align-items: center; justify-content: center;
    flex-shrink: 0;
  }
  .module-icon.blue   { background: rgba(79,142,247,0.12); color: var(--accent); }
  .module-icon.green  { background: rgba(52,217,139,0.10); color: var(--success); }
  .module-icon.yellow { background: rgba(247,195,79,0.10); color: var(--warning); }
  .module-icon.purple { background: rgba(167,112,247,0.10); color: #a770f7; }
  .module-icon.red    { background: rgba(247,97,79,0.10);  color: var(--danger); }

  .module-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 12px;
  }

  .module-body { flex: 1; }
  .module-name {
    font-size: 15px;
    font-weight: 600;
    letter-spacing: -0.01em;
    margin-bottom: 6px;
  }
  .module-desc {
    font-size: 12.5px;
    color: var(--text-dim);
    line-height: 1.6;
  }

  .module-status {
    display: inline-flex;
    align-items: center;
    gap: 5px;
    padding: 3px 9px;
    border-radius: 100px;
    font-family: var(--mono);
    font-size: 10px;
    font-weight: 500;
    white-space: nowrap;
    flex-shrink: 0;
  }
  .module-status.live {
    background: rgba(52,217,139,0.1);
    color: var(--success);
    border: 1px solid rgba(52,217,139,0.2);
  }
  .module-status.live::before {
    content: '';
    width: 5px; height: 5px;
    border-radius: 50%;
    background: var(--success);
    animation: pulse 1.8s ease infinite;
  }
  .module-status.coming-soon {
    background: rgba(122,131,153,0.1);
    color: var(--text-dim);
    border: 1px solid var(--border);
  }
  .module-status.coming-soon::before {
    content: '';
    width: 5px; height: 5px;
    border-radius: 50%;
    background: var(--text-dim);
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50%       { opacity: 0.4; }
  }

  .module-features {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    padding-top: 14px;
    border-top: 1px solid var(--border);
  }
  .feature-tag {
    font-family: var(--mono);
    font-size: 10px;
    color: var(--text-dim);
    background: var(--bg);
    border: 1px solid var(--border);
    border-radius: 4px;
    padding: 3px 7px;
  }
  .module-card.active .feature-tag {
    border-color: rgba(79,142,247,0.2);
    color: var(--text-dim);
  }

  .module-arrow {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 12px;
    color: var(--accent);
    font-weight: 500;
    margin-top: auto;
    padding-top: 12px;
  }

  /* ── QUICK STATS ── */
  .quick-stats {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 14px;
    margin-bottom: 36px;
  }
  .qs-card {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 10px;
    padding: 18px 20px;
  }
  .qs-label {
    font-family: var(--mono);
    font-size: 10px;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--text-dim);
    margin-bottom: 8px;
  }
  .qs-value {
    font-size: 22px;
    font-weight: 600;
    letter-spacing: -0.02em;
  }
  .qs-value.accent  { color: var(--accent); }
  .qs-value.success { color: var(--success); }
  .qs-value.warning { color: var(--warning); }
  .qs-sub {
    font-size: 11px;
    color: var(--text-dim);
    margin-top: 3px;
  }
</style>

<!-- Welcome Bar -->
<div class="welcome-bar">
  <div>
    <div class="welcome-greeting">
      Welcome back, <span><%= current_user.full_name %></span>
    </div>
    <div class="welcome-meta">
      <span class="badge badge-role"><%= current_user.role.humanize %></span>
      <% if @organisation %>
        <span class="org-badge">
          <svg width="10" height="10" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
          </svg>
          <%= @organisation.name %>
        </span>
      <% end %>
      <span style="color:var(--text-muted, #3d4a6a)">·</span>
      <span style="font-family:var(--mono);font-size:11px">
        <%= Time.now.strftime('%A, %d %b %Y') %>
      </span>
    </div>
  </div>

  <% if current_user.super_admin? %>
    <%= link_to organisations_path, class: 'btn btn-secondary btn-sm' do %>
      <svg width="13" height="13" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
      </svg>
      Manage Organisations
    <% end %>
  <% end %>
</div>

<!-- Quick Stats -->
<% if @organisation %>
<div class="quick-stats">
  <div class="qs-card">
    <div class="qs-label">Organisation</div>
    <div class="qs-value accent" style="font-size:16px;margin-top:4px"><%= @organisation.name.truncate(20) %></div>
    <div class="qs-sub">
      <span class="badge <%= @organisation.active? ? 'badge-active' : 'badge-inactive' %>" style="font-size:10px">
        <%= @organisation.status %>
      </span>
    </div>
  </div>
  <div class="qs-card">
    <div class="qs-label">Total Users</div>
    <div class="qs-value accent"><%= @organisation.users.count %></div>
    <div class="qs-sub"><%= @organisation.users.active.count %> active</div>
  </div>
  <div class="qs-card">
    <div class="qs-label">Plan</div>
    <div class="qs-value warning" style="font-size:16px;margin-top:4px">
      <%= @organisation.subscription_plan&.capitalize || 'Basic' %>
    </div>
    <div class="qs-sub">Current subscription</div>
  </div>
  <div class="qs-card">
    <div class="qs-label">Member Since</div>
    <div class="qs-value" style="font-size:15px;color:var(--text);margin-top:4px">
      <%= @organisation.created_at.strftime('%b %Y') %>
    </div>
    <div class="qs-sub"><%= (Date.today - @organisation.created_at.to_date).to_i %> days ago</div>
  </div>
</div>
<% end %>

